def plusMinus(arr):
    # Write your code here
    x = 0
    y = 0
    w = 0
    for z in arr:
        if z < 0: # negative
            y = y+1 
        elif z > 0: # positive
            x = x+1 
        elif z == 0: # zero
            w = w+1
    if x > 0:
