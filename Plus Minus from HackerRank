    else:
        print("0.000000")
    if w > 0:
        print("{:6f}".format(w/n))
    else:
        print("0.000000")
    

if __name__ == '__main__':
    n = int(input().strip())

    arr = list(map(int, input().rstrip().split()))

    plusMinus(arr)
